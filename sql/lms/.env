# LMS Database Environment Configuration
# Copy this file to .env and modify values as needed

# PostgreSQL Database Configuration
POSTGRES_DB=lms_db
POSTGRES_USER=lms_user
POSTGRES_PASSWORD=lms_password

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432

# pgAdmin Configuration (optional)
PGADMIN_DEFAULT_EMAIL=admin@lms.local
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=8080

# Container Settings
POSTGRES_CONTAINER_NAME=lms-database
PGADMIN_CONTAINER_NAME=lms-pgadmin

# Volume Settings (for persistent data)
POSTGRES_DATA_VOLUME=lms_postgres_data
PGADMIN_DATA_VOLUME=lms_pgadmin_data

# Network Settings
NETWORK_NAME=lms-network

# Optional: Database Backup Settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7